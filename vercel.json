{
  "version": 2,
  "builds": [
    {
      "src": "server/app/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/app/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/index.html"
    }
  ]
}